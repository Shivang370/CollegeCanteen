<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.shivang.collegecanteen">

    <uses-permission android:name="android.permission.CALL_PHONE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_icon"
        android:label="Food Hub"
        android:roundIcon="@mipmap/ic_icon"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".SplashScreen"
            android:configChanges="orientation"
            android:label="@string/app_name"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".MainCourse"
            android:configChanges="orientation"
            android:label="@string/activity2_name"
            android:screenOrientation="portrait">

        </activity>
        <activity
            android:name=".Main2Course"
            android:configChanges="orientation"
            android:label="MENU"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.AppCompat.DayNight" />
        <activity
            android:name=".Main3Activity"
            android:configChanges="orientation"
            android:label="@string/activity4_name"
            android:screenOrientation="portrait" />
        <activity
            android:name=".Main3Course"
            android:label="@string/activity3_name"
            android:configChanges="orientation"
            android:screenOrientation="portrait" />
    </application>

</manifest>