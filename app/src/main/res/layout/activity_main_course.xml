<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainCourse"
    android:background="@drawable/potato">


    <Button
        android:id="@+id/menu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginBottom="26dp"
        android:background="@drawable/shape"
        android:onClick="onClick2"
        android:text="Menu"
        android:textStyle="bold"
        android:visibility="visible" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="21dp"
        android:layout_marginLeft="21dp"
        android:layout_marginTop="96dp"
        android:text="Today's Special :"
        android:textColor="#000000"
        android:textSize="30dp"
        android:textStyle="bold" />
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="150dp"
        android:orientation="vertical">

        <RadioGroup
            android:id="@+id/radiogroup"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:visibility="visible">

            <RadioButton
                android:id="@+id/Chole"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Choley Bhature"
                android:textColor="#b22222"
                android:textSize="18dp"
                android:textStyle="bold" />

            <RadioButton
                android:id="@+id/poha"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Poha"
                android:textColor="#b22222"
                android:textSize="18dp"
                android:textStyle="bold" />

            <RadioButton
                android:id="@+id/kachori"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Kachori(2 pcs)"
                android:textColor="#b22222"
                android:textSize="18dp"
                android:textStyle="bold" />

            <RadioButton
                android:id="@+id/Gulab"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Gulabjamun(2 pcs)"
                android:textColor="#b22222"
                android:textSize="18dp"
                android:textStyle="bold" />
        </RadioGroup>

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="152dp"
        android:layout_marginLeft="208dp">

        <TextView
            android:id="@+id/chole"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="40 Rs."
            android:layout_marginTop="2dp"
            android:textStyle="bold"
            android:textSize="18dp"
            android:textColor="#800080"
            android:padding="3dp"/>

        <TextView
            android:id="@+id/Poha"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="3dp"
            android:text="30 Rs."
            android:textColor="#800080"
            android:textSize="18dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/kach"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="3dp"
            android:text="60 Rs."
            android:textColor="#800080"
            android:textSize="18dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/gulab"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="40 Rs."
            android:textStyle="bold"
            android:textColor="#800080"
            android:textSize="18dp"
            android:padding="3dp"/>

    </LinearLayout>

    <Button
        android:id="@+id/Review"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="24dp"
        android:layout_marginLeft="224dp"
        android:layout_marginEnd="145dp"
        android:layout_marginRight="145dp"
        android:layout_marginBottom="25dp"
        android:layout_toStartOf="@+id/menu"
        android:layout_toLeftOf="@+id/menu"
        android:background="@drawable/shape"
        android:onClick="onClick"
        android:text="Review order"
        android:textStyle="bold" />

</RelativeLayout>